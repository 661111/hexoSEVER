style.
  .l_cover {
    height: 100vh;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  .l_cover.wiki .cover-wrap {
    max-width: 500px;
  }
  .l_cover .cover-wrap {
    margin-bottom: 0px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: var(--fsp);
  }
  .md-text {
    max-width: 100%;
    color: var(--text-p1);
    line-height: 1.6;
    word-break: break-word;
    padding: 1rem;
  }
  .l_cover.wiki .cover-wrap .preview {
    margin-bottom: 2rem;
  }
  .md-text > div {
    margin: var(--gap-p) 0;
  }
  .l_cover.wiki .cover-wrap .preview img {
    object-fit: contain;
    min-width: 96px;
    min-height: 96px;
    max-height: 35vh;
    max-width: 100%;
  }
  .l_cover .cover-wrap .cover-title {
    font-weight: 700;
    font-size: 1.5rem;
    line-height: 1.2;
    color: var(--text);
    margin: 1rem 0px;
  }
  .l_cover .cover-wrap .description {
    margin: 1rem 0px;
  }
  @media (prefers-color-scheme: dark) {
    :root:not([data-theme]) a.button.start.gradient {
        z-index: 0;
        color: rgb(255, 255, 255);
        text-shadow: rgba(0, 0, 0, 0.12) 0px 0px 1px;
        transition: 0.38s ease-out;
        background: linear-gradient(to right, rgb(76, 149, 250), rgb(56, 201, 250), rgb(36, 249, 196), rgb(36, 249, 196), rgb(56, 201, 250), rgb(76, 149, 250)) 0% 0% / 1000%;
        animation: 60s linear 0s infinite normal none running glow;
    }
  }
  .l_cover .cover-wrap .start-wrap a.start {
    display: inline-block;
  }
  a.button.start.gradient {
    position: relative;
  }
  a.button.start {
    color: var(--card);
    border-radius: 100px;
    background: var(--text-p1);
  }
  a.button.start.gradient {
    transition: .38s ease-out;
    position: relative;
    z-index: 0;
    background: linear-gradient(to right, #4c95fa, #38c9fa, #24f9c4, #24f9c4, #38c9fa, #4c95fa);
    background-size: 1000%;
    color: #fff;
    text-shadow: 0 0 1px rgba(0, 0, 0, .12);
    animation: glow 60s linear infinite;
  }
  a.button.start.gradient:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    border-radius: 100px;
    background: inherit;
    z-index: -1;
    filter: blur(36px);
    transition: .38s ease-out;
    opacity: 0;
  }
  @media (prefers-color-scheme: dark) {
    :root:not([data-theme]) a.button.start.gradient::after {
        content: "";
        position: absolute;
        left: 0px;
        right: 0px;
        top: 0px;
        bottom: 0px;
        z-index: -1;
        filter: blur(12px);
        opacity: 0.5;
        border-radius: 100px;
        background: inherit;
        transition: 0.38s ease-out;
    }
  }